<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/itemLayout"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4"
            android:background="@color/hucy"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/n1"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Họ Tên" />

            <TextView
                android:id="@+id/n2"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:text="Số điện thoại" />

            <TextView
                android:id="@+id/n3"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_weight="1"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ" />
            <TextView
                android:id="@+id/n4"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Số bàn" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/countTable"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4"
            android:background="@color/hucy"

            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/n5"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Món" />

            <TextView
                android:id="@+id/n6"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:text="Số lượng" />

            <TextView
                android:id="@+id/n7"
                android:gravity="center"
                android:textColor="@color/white"

                android:layout_weight="1"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Giá" />
            <TextView
                android:id="@+id/n8"
                android:textColor="@color/white"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Thành Tiền" />
        </TableRow>
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/food"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"

                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"

                android:gravity="center"

                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>
    </TableLayout>
</LinearLayout>